include .env
export

run:
	@go run main.go

show-env:
	@echo $$GOOSE_MIGRATION_DIR

create:
	@goose create $(name) sql

status:
	@GOOSE_DRIVER=$(GOOSE_DRIVER) GOOSE_DBSTRING=${DB_STRING} GOOSE_MIGRATION_DIR=${GOOSE_MIGRATION_DIR} goose status

up:
	@GOOSE_DRIVER=$(GOOSE_DRIVER) GOOSE_DBSTRING=${DB_STRING} GOOSE_MIGRATION_DIR=${GOOSE_MIGRATION_DIR} goose up

down:
	@GOOSE_DRIVER=$(GOOSE_DRIVER) GOOSE_DBSTRING=${DB_STRING} GOOSE_MIGRATION_DIR=${GOOSE_MIGRATION_DIR} goose down

reset:
	@GOOSE_DRIVER=$(GOOSE_DRIVER) GOOSE_DBSTRING=${DB_STRING} GOOSE_MIGRATION_DIR=${GOOSE_MIGRATION_DIR} goose reset
